<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.balance.BalanceFragment">

    <TextView
        android:id="@+id/balance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="14sp"
        android:paddingStart="19dp"
        android:paddingTop="37dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/balance_label" />
    <TextView
        android:id="@+id/balance_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:paddingStart="16dp"
        android:paddingTop="1dp"
        android:paddingBottom="38dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/colorAccent"
        android:text="67000₽"
        app:layout_constraintTop_toBottomOf="@+id/balance_label"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/horDivider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bgColorEditMode"
        app:layout_constraintTop_toBottomOf="@+id/balance_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/middle_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horDivider1">
        <LinearLayout
            android:id="@+id/expense_container"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="26dp"
            android:paddingStart="15dp"
            android:paddingBottom="26dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expense"
                android:textSize="10sp"
                android:fontFamily="sans-serif-light"/>
            <TextView
                android:id="@+id/expenses_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5400₽"
                android:textColor="@color/colorPrimary"
                android:textSize="24dp"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bgColorEditMode"/>
        <LinearLayout
            android:id="@+id/income_container"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="26dp"
            android:paddingStart="15dp"
            android:paddingBottom="26dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expense"
                android:textSize="10sp"
                android:fontFamily="sans-serif-light"/>
            <TextView
                android:id="@+id/incomes_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7400₽"
                android:textColor="@color/incomeColor"
                android:textSize="24dp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/horDivider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bgColorEditMode"
        app:layout_constraintTop_toBottomOf="@+id/middle_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.example.loftmoney.screens.balance.BalanceView
        android:id="@+id/balanceView"
        android:layout_width="184dp"
        android:layout_height="176dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horDivider2"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>