<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LoftMoney" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/CustomEditText</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
    </style>

    <style name="CustomEditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_marginStart">@dimen/editTextMargin</item>
        <item name="android:layout_marginEnd">@dimen/editTextMargin</item>
        <item name="android:fontFamily">"sans-serif-regular"</item>
        <item name="android:textSize">@dimen/editTextSize</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="ButtonStyle" parent="android:style/Widget.Button">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingStart">17dp</item>
        <item name="android:paddingEnd">18dp</item>
    </style>

    <style name="ItemListTextView" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">29dp</item>
        <item name="android:layout_marginBottom">29dp</item>
        <item name="android:textSize">@dimen/tv_textsize</item>
    </style>
    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
</resources>